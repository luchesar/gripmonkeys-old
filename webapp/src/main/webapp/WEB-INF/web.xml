<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  id="WebApp_ID" version="2.5"
>
  <display-name>'Curso Conducir' web app</display-name>

  <welcome-file-list>
    <welcome-file>pages/index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>Image</servlet-name>
    <servlet-class>org.bitbucket.cursodeconducir.services.fileupload.ImageServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>QuestionStorage</servlet-name>
    <servlet-class>org.bitbucket.cursodeconducir.services.QuestionStorageServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LessonStorage</servlet-name>
    <servlet-class>org.bitbucket.cursodeconducir.services.LessonStorageServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>CourseStorage</servlet-name>
    <servlet-class>org.bitbucket.cursodeconducir.services.CoursesStorageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Image</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>QuestionStorage</servlet-name>
    <url-pattern>/question-storage</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LessonStorage</servlet-name>
    <url-pattern>/lesson-storage</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CourseStorage</servlet-name>
    <url-pattern>/course-storage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/pages/login.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>admin-tests</servlet-name>
    <jsp-file>/pages/admin/tests.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>admin-tests</servlet-name>
    <url-pattern>/admin/tests</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>admin-lessons</servlet-name>
    <jsp-file>/pages/admin/lessons.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>admin-lessons</servlet-name>
    <url-pattern>/admin/lessons</url-pattern>
  </servlet-mapping>
</web-app>
